<Window x:Class="ModBus_Server.LogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModBus_Server"
        mc:Ignorable="d"
        Title="LogView" Height="450" Width="800" Loaded="Window_Loaded" KeyUp="Window_KeyUp" Closing="Window_Closing">
    <Grid>
        <RichTextBox x:Name="RichTextBoxLog" Margin="10,34,10,10" Block.LineHeight="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="true" FontSize="13" FontFamily="Consolas" Background="#FF353535" Foreground="#FFFAFAFA">
            <FlowDocument PageWidth="20000">
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <CheckBox x:Name="CheckBoxPinWindowLog" Content="Pin window" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="CheckBoxPinWindowLog_Checked" Unchecked="CheckBoxPinWindowLog_Checked"/>
        <Button x:Name="ButtonClearLog" Content="Clear" Margin="0,9,9.857,0" VerticalAlignment="Top" Click="ButtonClearLog_Click" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
